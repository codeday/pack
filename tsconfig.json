{
  "compilerOptions": {
    "target": "ES2018",
    "lib": [
      "ES2018"
    ],
    "module": "commonjs",
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "plugins": [],
    "typeRoots": [
      "node_modules/@types",
      "src/@types",
    ],
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "src/@types",
    "types.d.ts",
    "src",
  ]
}
